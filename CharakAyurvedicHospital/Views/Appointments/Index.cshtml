@model IEnumerable<CharakAyurvedicHospital.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create" button type="button" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
                
            </th>
            <th>@Html.DisplayNameFor(model => model.PatienteMail)</th>
            <th>@Html.DisplayNameFor(model => model.PatientPhone)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.AreYouNewPatient)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                <td>@Html.DisplayFor(modelItem => item.PatienteMail)</td>
                <td>@Html.DisplayFor(modelItem => item.PatientPhone)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.AreYouNewPatient)</td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" button type="button" class="btn btn-secondary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" button type="button" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" button type="button" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

                
    