@model IEnumerable<CharakAyurvedicHospital.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" button type="button" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table table-striped table-hover sortable" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)             
            </th>
            <th>@Html.DisplayNameFor(model => model.PatienteMail)</th>
            <th>@Html.DisplayNameFor(model => model.PatientPhone)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.AreYouNewPatient)</th>
            <th></th><th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                <td>@Html.DisplayFor(modelItem => item.PatienteMail)</td>
                <td>@Html.DisplayFor(modelItem => item.PatientPhone)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.AreYouNewPatient)</td>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" button type="button" class="btn btn-outline-secondary">Edit</a> </td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id" button type="button" class="btn btn-outline-danger">Delete</a> 
                    </td>
                }
                <td><a asp-action="Details" asp-route-id="@item.Id" button type="button" class="btn btn-outline-primary">Details</a> </td>
            </tr>
        }
    </tbody>
</table>

                
    