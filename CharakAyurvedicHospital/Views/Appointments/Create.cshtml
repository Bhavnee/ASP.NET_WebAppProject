@model CharakAyurvedicHospital.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="AreYouNewPatient" class="contro-label"></label>
                <input asp-for="AreYouNewPatient" class="contro-label"/>
                <span asp-validation-for="AreYouNewPatient" class="text-danger"></span><br /><br />

                
                <label asp-for="PatientName" class="contro-label"></label>
                <input asp-for="PatientName" class="contro-label"/>
                <span asp-validation-for="PatientName" class="text-danger"></span><br /><br />

                <label asp-for="PatienteMail" class="contro-label"></label>
                <input asp-for="PatienteMail" class="contro-label" />
                @*<span asp-validation-for="PatienteMail" class="text-danger"></span>*@<br /><br />


                <label asp-for="PatientPhone" class="contro-label"></label>
                <input asp-for="PatientPhone" class="contro-label" />
                @*<span asp-validation-for="PatientPhone" class="text-danger"></span>*@<br /><br />

                <label asp-for="Gender" class="contro-label"></label>
                <input asp-for="Gender" class="contro-label" />
                <span asp-validation-for="Gender" class="text-danger"></span><br /><br />
                </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">List of Appointments</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
